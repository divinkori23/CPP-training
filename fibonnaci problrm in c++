#include <iostream>
using namespace std;

int febterm(int n)
{
    int a = 1, b = 1, c, count = 2;

    if (n == 1) {
        cout << "Previous term: 0" << endl;
        return 1;
    }
    if (n == 2) {
        cout << "Previous term: 1" << endl;
        return 1;
    }

    while (count < n)
    {
        c = a + b;
        a = b;
        b = c;
        count++;
    }

    cout << "Previous term: " << a << endl;
    return b;
}

int main() {
    int n, x;
    cout << "Enter the term number: ";
    cin >> n;
    x = febterm(n);
    cout << "Fibonacci term " << n << ": " << x << endl;
    return 0;
}
