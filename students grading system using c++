#include <iostream>
using namespace std;

int marking(int a, int b, int c) {
    float tot = a + b + c;
    float avg = tot / 3;

    if (avg < 35)
        cout << "Fail!!" << endl;
    else if (avg >= 35 && avg < 50)
        cout << "Grade D" << endl;
    else if (avg >= 50 && avg < 60)
        cout << "Grade C" << endl;
    else if (avg >= 60 && avg < 70)
        cout << "Grade B" << endl;
    else if (avg >= 70 && avg < 80)
        cout << "Grade B+" << endl;
    else if (avg >= 80 && avg < 90)
        cout << "Grade A" << endl;
    else if (avg >= 90 && avg <= 100)
        cout << "Grade A+" << endl;
    else
        cout << "Invalid marks entered!" << endl;

    return 0;
}

int main() {
    int a, b, c, t;
    cout << "Enter your marks in 3 subjects (a, b & c):" << endl;
    cin >> a >> b >> c;
    t = marking(a, b, c);
    return 0;
}
