#include <stdio.h>

int main() {
    int number,largest_digit = 0,digit;
    printf("Enter an integer: ");
    scanf("%d", &number);
    if (number == 0) {
        largest_digit = 0;
    } else {
        while (number > 0) {
            digit = number % 10;
            if (digit > largest_digit) {
                largest_digit = digit; 
            }
            number = number/10; 
        }
    }
    printf("The largest digit in the number is: %d\n", largest_digit);
    return 0;
}
