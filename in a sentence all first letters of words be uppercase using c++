#include <iostream>
using namespace std;

int main() {
    char str[100];
    cout << "Enter a sentence: ";
    cin.get(str, 100);
    cout<<str;
    if (str[0] != '\0') 
    {
        str[0] = toupper(str[0]);
    }

    for (int i = 1; str[i] !='\0'; i++) 
    {
        if(str[i-1] == ' ')
        {
            str[i] = toupper(str[i]);
        }
    }

    cout << "Output: " << str << endl;
    return 0;
}
