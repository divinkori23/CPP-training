#include <iostream>
using namespace std;

int factorial(int n)
{
    if (n < 0) {
        return -1; 
    } else if (n == 0 || n == 1) {
        return 1;
    } else {
        return n * factorial(n - 1);
    }
}
int counttrailingzeros(int num)
{
    int y = factorial(num);
    int count = 0;
    while (y % 10 == 0) 
    {
        count++;
        y = y/10;
    }
    cout << "Trailing zeros in factorial of " << num << " is: " << count << endl;
    return count;
}

int main() {
    int num,t;
    cout<<"enter a number"<<endl;
    cin>>num;
    t=counttrailingzeros(num);
    return 0;
}
